<?xml version="1.0" encoding="UTF-8"?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NexusChat"
             x:Class="NexusChat.App"
             UserAppTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Default colors and styles -->
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                
                <!-- Theme files - using AppThemeBinding instead of directly including both -->
                <ResourceDictionary Source="{AppThemeBinding Light=Resources/Styles/Themes/LightTheme.xaml, Dark=Resources/Styles/Themes/DarkTheme.xaml}" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Common styles that use FontAwesome -->
            <Style x:Key="FontAwesome" TargetType="Label">
                <Setter Property="FontFamily" Value="FontAwesome-Solid" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#212529, Dark=#f8f9fa}" />
            </Style>
            
            <Style x:Key="IconButton" TargetType="Button">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#4a6cf7, Dark=#4a6cf7}" />
                <Setter Property="FontFamily" Value="FontAwesome-Solid" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="10" />
                <Setter Property="WidthRequest" Value="40" />
                <Setter Property="HeightRequest" Value="40" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
