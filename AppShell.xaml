<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NexusChat.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NexusChat"
    xmlns:pages="clr-namespace:NexusChat.Views.Pages"
    Title="NexusChat"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <!-- Single ShellContent with MainPage as starting point -->
    <ShellContent
        Route="MainPage"
        ContentTemplate="{DataTemplate pages:MainPage}"
        FlyoutItemIsVisible="False" />

    <ShellContent
        ContentTemplate="{DataTemplate pages:ChatPage}"
        Route="ChatPage" />

    <FlyoutItem Title="Conversations" Route="ConversationsPage">
        <ShellContent ContentTemplate="{DataTemplate pages:ConversationsPage}" />
    </FlyoutItem>

</Shell>
