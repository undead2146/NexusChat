<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- MAUI animations need to be created programmatically in code-behind -->
    <!-- These are documentation placeholders only -->
    
    <x:String x:Key="ShowSidebarAnimationInfo">Slide sidebar in from left with TranslationX animation</x:String>
    <x:String x:Key="HideSidebarAnimationInfo">Slide sidebar out to left with TranslationX animation</x:String>
    
    <!-- Animation durations and easing constants -->
    <x:Double x:Key="SidebarAnimationDuration">300</x:Double>
    <x:Double x:Key="FadeAnimationDuration">200</x:Double>
    <x:Double x:Key="SidebarWidth">300</x:Double>

</ResourceDictionary>
