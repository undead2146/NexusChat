<?xml version="1.0" encoding="UTF-8"?>
<?xaml-comp compile="true"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 
    =========================
    CORE BRAND COLORS
    =========================
    -->
    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="PrimaryDark">#3700B3</Color>
    <Color x:Key="PrimaryLight">#7D5CFF</Color>
    
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="SecondaryDark">#B0A5D9</Color>
    <Color x:Key="SecondaryLight">#F5F0FF</Color>
    
    <Color x:Key="Tertiary">#2B0B98</Color>

    <!-- 
    =========================
    NEUTRAL COLORS
    =========================
    -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="OffBlack">#121212</Color>
    <Color x:Key="Transparent">Transparent</Color>
    
    <!-- Gray scale -->
    <Color x:Key="Gray100">#F2F2F2</Color>
    <Color x:Key="Gray200">#E6E6E6</Color>
    <Color x:Key="Gray300">#CCCCCC</Color>
    <Color x:Key="Gray400">#B3B3B3</Color>
    <Color x:Key="Gray500">#999999</Color>
    <Color x:Key="Gray600">#7F7F7F</Color>
    <Color x:Key="Gray700">#666666</Color>
    <Color x:Key="Gray800">#4D4D4D</Color>
    <Color x:Key="Gray900">#333333</Color>
    <Color x:Key="Gray950">#1F1F1F</Color>

    <!-- 
    =========================
    SEMANTIC COLORS
    =========================
    -->
    <Color x:Key="Success">#28A745</Color>
    <Color x:Key="Warning">#FFC107</Color>
    <Color x:Key="Danger">#DC3545</Color>
    <Color x:Key="Info">#17A2B8</Color>
    
    <!-- Gold for star icons -->
    <Color x:Key="Gold">#FFD700</Color>
    <Color x:Key="GoldLight">#FFF8E1</Color>
    <Color x:Key="GoldDark">#CC9900</Color>
    
    <!-- Blue shades -->
    <Color x:Key="LightBlue">#E3F2FD</Color>
    <Color x:Key="DarkBlue">#1565C0</Color>
    <Color x:Key="MidnightBlue">#191970</Color>
    
    <!-- Green shades -->
    <Color x:Key="LightGreen">#E8F5E9</Color>
    <Color x:Key="Green">#4CAF50</Color>
    <Color x:Key="DarkGreen">#388E3C</Color>
    
    <!-- Orange/Amber shades -->
    <Color x:Key="Amber">#FFC107</Color>
    <Color x:Key="Orange">#FF9800</Color>
    <Color x:Key="DeepOrange">#FF5722</Color>
    
    <!-- Other accent colors -->
    <Color x:Key="Magenta">#E91E63</Color>
    
    <!-- Text color variables -->
    <Color x:Key="PrimaryTextColor">#212121</Color>
    <Color x:Key="PrimaryTextColorDark">White</Color>
    <Color x:Key="SecondaryTextColor">#757575</Color>
    <Color x:Key="SecondaryTextColorDark">#BBBBBB</Color>
    <Color x:Key="PrimaryDarkText">#000000</Color>
    <Color x:Key="SecondaryDarkText">#FAFAFA</Color>

    <!-- 
    =========================
    BACKGROUND COLORS
    =========================
    -->
    <Color x:Key="Background">White</Color>
    <Color x:Key="BackgroundDark">#121212</Color>
    
    <!-- Card colors -->
    <Color x:Key="CardBackground">White</Color>
    <Color x:Key="CardBackgroundDark">#222222</Color>

    <!-- 
    =========================
    AI MODELS COLORS
    =========================
    -->
    <!-- Default badge colors -->
    <Color x:Key="DefaultBadgeBackground">#FFF8E1</Color>
    <Color x:Key="DefaultBadgeBackgroundDark">#5D4614</Color>
    <Color x:Key="DefaultBadgeText">#FF8F00</Color>
    <Color x:Key="DefaultBadgeTextDark">#FFC107</Color>
    <Color x:Key="DefaultStarColor">#FFD700</Color>
    
    <!-- Selected badge colors -->
    <Color x:Key="SelectedBadgeBackground">#E3F2FD</Color>
    <Color x:Key="SelectedBadgeBackgroundDark">#1A3C5E</Color>
    <Color x:Key="SelectedBadgeText">#1976D2</Color>
    <Color x:Key="SelectedBadgeTextDark">#64B5F6</Color>
    
    <!-- Streaming badge colors -->
    <Color x:Key="StreamingBadgeBackground">#E0F7FA</Color>
    <Color x:Key="StreamingBadgeBackgroundDark">#0D3B40</Color>
    <Color x:Key="StreamingBadgeText">#0097A7</Color>
    <Color x:Key="StreamingBadgeTextDark">#4DD0E1</Color>
    
    <!-- Temperature badge colors -->
    <Color x:Key="TemperatureBadgeBackground">#FFF3E0</Color>
    <Color x:Key="TemperatureBadgeBackgroundDark">#3E2404</Color>
    <Color x:Key="TemperatureText">#E65100</Color>
    <Color x:Key="TemperatureTextDark">#FF9800</Color>
    
    <!-- Star button colors -->
    <Color x:Key="StarButtonBackground">#FFF4D4</Color>
    <Color x:Key="StarButtonBackgroundDark">#5D4614</Color>
    <Color x:Key="StarButtonInnerBackground">#FFF8E1</Color>
    <Color x:Key="StarButtonInnerBackgroundDark">#4D3A14</Color>
    <Color x:Key="StarInactive">#BBBBBB</Color>
    <Color x:Key="StarInactiveDark">#888888</Color>
    
    <!-- Toast notification colors -->
    <Color x:Key="ToastBackground">#333333</Color>
    <Color x:Key="ToastBackgroundDark">#1E1E1E</Color>
    <Color x:Key="ToastText">White</Color>
</ResourceDictionary>
