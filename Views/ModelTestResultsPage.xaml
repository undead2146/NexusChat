<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:NexusChat.ViewModels"
             x:Class="NexusChat.Views.ModelTestResultsPage"
             Title="Model Test Results">
    
    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,20">
            <Label Text="Model Test Results" 
                   Style="{StaticResource HeaderLabelStyle}" 
                   HorizontalOptions="Center" />
            
            <Label Text="{Binding TestSummary}" 
                   HorizontalOptions="Center"
                   TextColor="{Binding IsAllTestsPassed, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Success|Error'}" />
        </VerticalStackLayout>
        
        <!-- Test Results List -->
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding TestResults}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="15" CornerRadius="10">
                        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                            <!-- Pass/Fail Icon -->
                            <Label Grid.RowSpan="2" 
                                   Text="{Binding IsPassed, Converter={StaticResource BoolToIconConverter}, ConverterParameter='&#xf058;|&#xf057;'}" 
                                   FontFamily="FontAwesome-Solid"
                                   FontSize="24"
                                   VerticalOptions="Center"
                                   TextColor="{Binding IsPassed, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Success|Error'}" />
                            
                            <!-- Test Name -->
                            <Label Grid.Column="1"
                                   Text="{Binding TestName}"
                                   FontFamily="OpenSansSemiBold"
                                   FontSize="16" />
                            
                            <!-- Test Detail -->
                            <Label Grid.Column="1" Grid.Row="1"
                                   Text="{Binding Description}"
                                   TextColor="{StaticResource SecondaryTextColor}"
                                   FontSize="14" />
                            
                            <!-- Duration -->
                            <Label Grid.Column="2" Grid.RowSpan="2"
                                   Text="{Binding Duration, StringFormat='{0}ms'}"
                                   VerticalOptions="Center"
                                   TextColor="{StaticResource SecondaryTextColor}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="&#xf071;" FontFamily="FontAwesome-Solid" FontSize="48" 
                           HorizontalOptions="Center" TextColor="{StaticResource Warning}" />
                    <Label Text="No test results available" 
                           Margin="0,20,0,0"
                           Style="{StaticResource SubHeaderLabelStyle}" 
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
        
        <!-- Close Button -->
        <Button Grid.Row="2" 
                Text="Close" 
                Command="{Binding CloseCommand}"
                HorizontalOptions="Center"
                Margin="0,20,0,0" />
    </Grid>
</ContentPage>
