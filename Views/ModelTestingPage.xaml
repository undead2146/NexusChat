<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:NexusChat.ViewModels"
             x:Class="NexusChat.Views.ModelTestingPage"
             Title="Model Testing">

    <ContentPage.BindingContext>
        <viewmodels:ModelTestingViewModel />
    </ContentPage.BindingContext>
    
    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,20">
            <Label Text="Data Model Testing" 
                   Style="{StaticResource HeaderLabelStyle}" 
                   HorizontalOptions="Center" />
            
            <Label Text="Run tests to validate model functionality" 
                   TextColor="{StaticResource SecondaryTextColor}"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>
        
        <!-- Test Models List -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15">
                <!-- User Model Tests -->
                <Frame>
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <Label Grid.Column="0" Text="&#xf007;" 
                               Style="{StaticResource AppThemeBindingFontAwesome}" 
                               FontSize="24" VerticalOptions="Center" />
                        
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="User Model" FontFamily="OpenSansSemiBold" FontSize="16" />
                            <Label Text="Test user creation, validation, and authentication" 
                                   TextColor="{StaticResource SecondaryTextColor}" FontSize="12" />
                            
                            <!-- Status indicator - shown after test runs -->
                            <Label Text="{Binding UserTestStatus}" 
                                   IsVisible="{Binding HasRunUserTest}"
                                   FontFamily="OpenSansSemiBold"
                                   TextColor="{Binding UserTestPassed, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Success|Error'}" 
                                   Margin="0,5,0,0" />
                        </VerticalStackLayout>
                        
                        <Button Grid.Column="2" 
                                Text="Run Tests"
                                Command="{Binding RunUserTestsCommand}"
                                IsEnabled="{Binding IsNotBusy}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                CornerRadius="8" />
                    </Grid>
                </Frame>
                
                <!-- Placeholder for future Conversation Model Tests -->
                <Frame Opacity="0.6">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <Label Grid.Column="0" Text="&#xf4ad;" 
                               Style="{StaticResource AppThemeBindingFontAwesome}" 
                               FontSize="24" VerticalOptions="Center" />
                        
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Conversation Model" FontFamily="OpenSansSemiBold" FontSize="16" />
                            <Label Text="Tests will be available in future updates" 
                                   TextColor="{StaticResource SecondaryTextColor}" FontSize="12" />
                        </VerticalStackLayout>
                        
                        <Button Grid.Column="2" 
                                Text="Coming Soon"
                                IsEnabled="False"
                                CornerRadius="8" />
                    </Grid>
                </Frame>
                
                <!-- Placeholder for future Message Model Tests -->
                <Frame Opacity="0.6">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <Label Grid.Column="0" Text="&#xf075;" 
                               Style="{StaticResource AppThemeBindingFontAwesome}" 
                               FontSize="24" VerticalOptions="Center" />
                        
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Message Model" FontFamily="OpenSansSemiBold" FontSize="16" />
                            <Label Text="Tests will be available in future updates" 
                                   TextColor="{StaticResource SecondaryTextColor}" FontSize="12" />
                        </VerticalStackLayout>
                        
                        <Button Grid.Column="2" 
                                Text="Coming Soon"
                                IsEnabled="False"
                                CornerRadius="8" />
                    </Grid>
                </Frame>
                
                <!-- Test Log Output -->
                <Frame Padding="10" Margin="0,10,0,0">
                    <VerticalStackLayout Spacing="10">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Test Log Output" FontFamily="OpenSansSemiBold" FontSize="16" />
                            <Button Grid.Column="1" 
                                    Text="Clear"
                                    Command="{Binding ClearLogsCommand}" 
                                    HorizontalOptions="End" 
                                    VerticalOptions="Start"
                                    FontSize="12" 
                                    Padding="10,5" />
                        </Grid>
                        
                        <ScrollView HeightRequest="200" Margin="0,5,0,0">
                            <Frame BackgroundColor="{AppThemeBinding Light=#f8f9fa, Dark=#222}" 
                                   Padding="10" BorderColor="{AppThemeBinding Light=#dee2e6, Dark=#444}">
                                <Label Text="{Binding LogOutput}" 
                                       FontFamily="Monospace" 
                                       FontSize="12" 
                                       LineBreakMode="WordWrap" />
                            </Frame>
                        </ScrollView>
                    </VerticalStackLayout>
                </Frame>
                
                <!-- Results Section (appears after tests run) -->
                <BoxView HeightRequest="1" 
                         BackgroundColor="{StaticResource SeparatorColor}"
                         IsVisible="{Binding HasRunAnyTest}" />
                         
                <Label Text="Test Results" 
                       Style="{StaticResource SubHeaderLabelStyle}"
                       IsVisible="{Binding HasRunAnyTest}" />
                       
                <CollectionView ItemsSource="{Binding TestResults}"
                               IsVisible="{Binding HasRunAnyTest}"
                               SelectionMode="None"
                               EmptyView="No test results available">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0,5" Padding="15" CornerRadius="8">
                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                                    <!-- Icon indicating pass/fail -->
                                    <Label Grid.RowSpan="2" Grid.Column="0"
                                           Text="{Binding Success, Converter={StaticResource BoolToStringConverter}, ConverterParameter='&#xf058;|&#xf057;'}"
                                           FontFamily="FontAwesome-Solid"
                                           FontSize="24"
                                           Margin="0,0,10,0"
                                           TextColor="{Binding Success, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Success|Error'}" />
                                    
                                    <!-- Test name -->
                                    <Label Grid.Column="1" Text="{Binding TestName}" 
                                           FontFamily="OpenSansSemiBold" />
                                    
                                    <!-- Test message -->
                                    <Label Grid.Row="1" Grid.Column="1" 
                                           Text="{Binding Message}"
                                           TextColor="{StaticResource SecondaryTextColor}"
                                           FontSize="12" />
                                    
                                    <!-- Duration -->
                                    <Label Grid.Column="2" Grid.RowSpan="2"
                                           Text="{Binding Duration, StringFormat='{0:F0}ms'}"
                                           TextColor="{StaticResource SecondaryTextColor}"
                                           FontSize="12"
                                           VerticalOptions="Center" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
        
        <!-- Footer -->
        <VerticalStackLayout Grid.Row="2" Margin="0,20,0,0">
            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}" 
                               IsVisible="{Binding IsBusy}"
                               HorizontalOptions="Center" />
            
            <!-- Close Button -->
            <Button Text="Close" 
                    Command="{Binding GoBackCommand}"
                    HorizontalOptions="Center"
                    IsEnabled="{Binding IsNotBusy}" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
