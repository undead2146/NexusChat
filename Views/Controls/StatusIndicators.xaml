<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NexusChat.Views.Controls.StatusIndicators">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="10">
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                   Padding="20" 
                   CornerRadius="10"
                   BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Status Indicators"
                           Style="{StaticResource SubheaderLabelStyle}" 
                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />

                    <!-- Activity Indicator -->
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                           Padding="15"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Activity Indicator"
                                   FontFamily="OpenSansSemiBold" 
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                            <ActivityIndicator IsRunning="True" 
                                               Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                               HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Progress Bar -->
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                           Padding="15"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Progress Bar"
                                   FontFamily="OpenSansSemiBold" 
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                            <ProgressBar Progress="0.7" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Status Icons -->
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                           Padding="15"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Status Icons"
                                   FontFamily="OpenSansSemiBold" 
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                            <Grid ColumnDefinitions="*, *, *" ColumnSpacing="15">
                                <!-- Success Icon -->
                                <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                                    <Label Text="&#xf058;" 
                                           FontFamily="FontAwesome-Solid"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light=#28a745, Dark=#75e096}"
                                           FontAutoScalingEnabled="False" />
                                    <Label Text="Success"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                           HorizontalOptions="Center"
                                           FontSize="14" />
                                </VerticalStackLayout>

                                <!-- Warning Icon -->
                                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                                    <Label Text="&#xf071;" 
                                           FontFamily="FontAwesome-Solid"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light=#ffc107, Dark=#ffdf7e}"
                                           FontAutoScalingEnabled="False" />
                                    <Label Text="Warning"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                           HorizontalOptions="Center"
                                           FontSize="14" />
                                </VerticalStackLayout>

                                <!-- Error Icon -->
                                <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                                    <Label Text="&#xf057;" 
                                           FontFamily="FontAwesome-Solid"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light=#dc3545, Dark=#ff8085}"
                                           FontAutoScalingEnabled="False" />
                                    <Label Text="Error"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                           HorizontalOptions="Center"
                                           FontSize="14" />
                                </VerticalStackLayout>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
