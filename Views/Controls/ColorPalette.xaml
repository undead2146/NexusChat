<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NexusChat.Core.ViewModels.DevTools"
             x:Class="NexusChat.Views.Controls.ColorPalette">
    
    <VerticalStackLayout Spacing="15">
        <Label Text="COLOR SYSTEM" Style="{StaticResource HeaderLabelStyle}" Margin="0,10,0,0" />
        
        <!-- Primary Color Palette -->
        <Frame>
            <VerticalStackLayout Spacing="15">
                <Label Text="Primary Color Palette" Style="{StaticResource SubHeaderLabelStyle}" />
                
                <Grid ColumnDefinitions="*,*,*" RowSpacing="10">
                    <VerticalStackLayout Grid.Column="0" Spacing="5">
                        <Border HeightRequest="60" BackgroundColor="{StaticResource PrimaryDark}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" CommandParameter="PrimaryDark" />
                            </Border.GestureRecognizers>
                        </Border>
                        <Label Text="Primary Dark" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Grid.Column="1" Spacing="5">
                        <Border HeightRequest="60" BackgroundColor="{StaticResource Primary}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" CommandParameter="Primary" />
                            </Border.GestureRecognizers>
                        </Border>
                        <Label Text="Primary" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Grid.Column="2" Spacing="5">
                        <Border HeightRequest="60" BackgroundColor="{StaticResource PrimaryLight}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" CommandParameter="PrimaryLight" />
                            </Border.GestureRecognizers>
                        </Border>
                        <Label Text="Primary Light" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Grid>
            </VerticalStackLayout>
        </Frame>

        <!-- Core Color Palette -->
        <Frame>
            <VerticalStackLayout Spacing="15">
                <Label Text="Core Colors" Style="{StaticResource SubHeaderLabelStyle}" />
                
                <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="Auto,60" ColumnSpacing="5" RowSpacing="10">
                    <Label Text="Primary" Grid.Column="0" HorizontalOptions="Center" />
                    <Label Text="Secondary" Grid.Column="1" HorizontalOptions="Center" />
                    <Label Text="Accent" Grid.Column="2" HorizontalOptions="Center" />
                    <Label Text="Background" Grid.Column="3" HorizontalOptions="Center" />
                    
                    <Border Grid.Row="1" Grid.Column="0" BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" CommandParameter="Primary" />
                        </Border.GestureRecognizers>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Secondary}}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" CommandParameter="Secondary" />
                        </Border.GestureRecognizers>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="2" BackgroundColor="{AppThemeBinding Light={StaticResource Accent}, Dark={StaticResource Accent}}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" CommandParameter="Accent" />
                        </Border.GestureRecognizers>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="3" BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource Background}}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" CommandParameter="Background" />
                        </Border.GestureRecognizers>
                    </Border>
                </Grid>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentView>
