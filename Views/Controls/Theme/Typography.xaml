<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NexusChat.Views.Controls.Theme.Typography">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="10">
            <!-- Text Styles Section -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                   Padding="20" 
                   CornerRadius="10"
                   BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Text Styles"
                           Style="{StaticResource SubheaderLabelStyle}"
                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />

                    <!-- Display styles -->
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                           Padding="15"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                        <VerticalStackLayout Spacing="20">
                            <Label Text="Display Large"
                                   FontFamily="OpenSansBold"
                                   FontSize="32"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />

                            <Label Text="Display Medium"
                                   FontFamily="OpenSansBold"
                                   FontSize="28"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />

                            <Label Text="Display Small"
                                   FontFamily="OpenSansBold"
                                   FontSize="24"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Heading styles -->
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                           Padding="15"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                        <VerticalStackLayout Spacing="20">
                            <Label Text="Heading 1"
                                   FontFamily="OpenSansBold"
                                   FontSize="20"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />

                            <Label Text="Heading 2"
                                   FontFamily="OpenSansSemiBold"
                                   FontSize="18"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />

                            <Label Text="Heading 3"
                                   FontFamily="OpenSansSemiBold"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Body styles -->
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                           Padding="15"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                        <VerticalStackLayout Spacing="20">
                            <Label Text="Body Large"
                                   FontFamily="OpenSansRegular"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />

                            <Label Text="Body Medium"
                                   FontFamily="OpenSansRegular"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />

                            <Label Text="Body Small"
                                   FontFamily="OpenSansRegular"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
