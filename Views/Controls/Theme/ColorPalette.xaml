<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NexusChat.Views.Controls.Theme.ColorPalette">
    <ScrollView>
        <VerticalStackLayout Spacing="20">
            <!-- Primary Colors -->
            <Label Text="Primary Colors" 
                   Style="{StaticResource SubheaderLabelStyle}" 
                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                   
            <FlexLayout Wrap="Wrap" JustifyContent="Start">
                <!-- Primary -->
                <Frame Margin="0,0,12,12" Padding="0" WidthRequest="150" HeightRequest="90" CornerRadius="6">
                    <Grid>
                        <BoxView BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                        <VerticalStackLayout Padding="10" VerticalOptions="End">
                            <Label Text="Primary" TextColor="White" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{AppThemeBinding Light='#512BD4', Dark='#9982EA'}" TextColor="White" FontSize="12" />
                        </VerticalStackLayout>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" 
                                                 CommandParameter="{AppThemeBinding Light='Primary: #512BD4', Dark='PrimaryDark: #9982EA'}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </Frame>
                
                <!-- Secondary -->
                <Frame Margin="0,0,12,12" Padding="0" WidthRequest="150" HeightRequest="90" CornerRadius="6">
                    <Grid>
                        <BoxView BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource SecondaryDark}}" />
                        <VerticalStackLayout Padding="10" VerticalOptions="End">
                            <Label Text="Secondary" TextColor="{AppThemeBinding Light='Black', Dark='White'}" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{AppThemeBinding Light='#DFD8F7', Dark='#625B71'}" TextColor="{AppThemeBinding Light='Black', Dark='White'}" FontSize="12" />
                        </VerticalStackLayout>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" 
                                                 CommandParameter="{AppThemeBinding Light='Secondary: #DFD8F7', Dark='SecondaryDark: #625B71'}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </Frame>
                
                <!-- Tertiary -->
                <Frame Margin="0,0,12,12" Padding="0" WidthRequest="150" HeightRequest="90" CornerRadius="6">
                    <Grid>
                        <BoxView BackgroundColor="{AppThemeBinding Light={StaticResource Tertiary}, Dark={StaticResource TertiaryDark}}" />
                        <VerticalStackLayout Padding="10" VerticalOptions="End">
                            <Label Text="Tertiary" TextColor="White" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{AppThemeBinding Light='#2B0B98', Dark='#A09FFF'}" TextColor="White" FontSize="12" />
                        </VerticalStackLayout>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" 
                                                 CommandParameter="{AppThemeBinding Light='Tertiary: #2B0B98', Dark='TertiaryDark: #A09FFF'}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </Frame>
            </FlexLayout>
            
            <!-- Background Colors -->
            <Label Text="Background Colors" 
                   Style="{StaticResource SubheaderLabelStyle}" 
                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                   
            <FlexLayout Wrap="Wrap" JustifyContent="Start">
                <!-- Background -->
                <Frame Margin="0,0,12,12" Padding="0" WidthRequest="150" HeightRequest="90" CornerRadius="6">
                    <Grid>
                        <BoxView BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}" />
                        <VerticalStackLayout Padding="10" VerticalOptions="End">
                            <Label Text="Background" TextColor="{AppThemeBinding Light='Black', Dark='White'}" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{AppThemeBinding Light='#FFFFFF', Dark='#121212'}" TextColor="{AppThemeBinding Light='Black', Dark='White'}" FontSize="12" />
                        </VerticalStackLayout>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" 
                                                 CommandParameter="{AppThemeBinding Light='Background: #FFFFFF', Dark='BackgroundDark: #121212'}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </Frame>
                
                <!-- Card Background -->
                <Frame Margin="0,0,12,12" Padding="0" WidthRequest="150" HeightRequest="90" CornerRadius="6">
                    <Grid>
                        <BoxView BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}" />
                        <VerticalStackLayout Padding="10" VerticalOptions="End">
                            <Label Text="Card Background" TextColor="{AppThemeBinding Light='Black', Dark='White'}" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{AppThemeBinding Light='#F6F6F6', Dark='#1E1E1E'}" TextColor="{AppThemeBinding Light='Black', Dark='White'}" FontSize="12" />
                        </VerticalStackLayout>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" 
                                                 CommandParameter="{AppThemeBinding Light='CardBackground: #F6F6F6', Dark='CardBackgroundDark: #1E1E1E'}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </Frame>
            </FlexLayout>
            
            <!-- Text Colors -->
            <Label Text="Text Colors" 
                   Style="{StaticResource SubheaderLabelStyle}" 
                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                   
            <FlexLayout Wrap="Wrap" JustifyContent="Start">
                <!-- Primary Text -->
                <Frame Margin="0,0,12,12" Padding="0" WidthRequest="150" HeightRequest="90" CornerRadius="6">
                    <Grid>
                        <BoxView BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}" />
                        <Label Text="Primary Text" 
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                               HorizontalOptions="Center" VerticalOptions="Center" FontSize="16" FontAttributes="Bold" />
                        <VerticalStackLayout Padding="10" VerticalOptions="End">
                            <Label Text="Primary Text" TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{AppThemeBinding Light='#000000', Dark='#FFFFFF'}" TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" FontSize="12" />
                        </VerticalStackLayout>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" 
                                                 CommandParameter="{AppThemeBinding Light='PrimaryTextColor: #000000', Dark='PrimaryTextColorDark: #FFFFFF'}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </Frame>
                
                <!-- Secondary Text -->
                <Frame Margin="0,0,12,12" Padding="0" WidthRequest="150" HeightRequest="90" CornerRadius="6">
                    <Grid>
                        <BoxView BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}" />
                        <Label Text="Secondary Text" 
                               TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}"
                               HorizontalOptions="Center" VerticalOptions="Center" FontSize="16" FontAttributes="Bold" />
                        <VerticalStackLayout Padding="10" VerticalOptions="End">
                            <Label Text="Secondary Text" TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{AppThemeBinding Light='#666666', Dark='#B3B3B3'}" TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" FontSize="12" />
                        </VerticalStackLayout>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" 
                                                 CommandParameter="{AppThemeBinding Light='SecondaryTextColor: #666666', Dark='SecondaryTextColorDark: #B3B3B3'}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </Frame>
            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
