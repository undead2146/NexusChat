<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NexusChat.Views.Controls.Theme.FormComponents">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="10">
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                   Padding="20" 
                   CornerRadius="10"
                   BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Form Components"
                           Style="{StaticResource SubheaderLabelStyle}"
                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />

                    <!-- Login Form -->
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                           Padding="15"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Login Form"
                                   FontFamily="OpenSansSemiBold"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                            <VerticalStackLayout Spacing="20">
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="Username"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                                    <Entry Placeholder="Enter your username"
                                           PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                                </VerticalStackLayout>
                                
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="Password"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                                    <Entry Placeholder="Enter your password"
                                           IsPassword="True"
                                           PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                                </VerticalStackLayout>
                                
                                <CheckBox IsChecked="True" />
                                
                                <Button Text="Login" Style="{StaticResource PrimaryButtonStyle}" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Radio Buttons -->
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                           Padding="15"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Radio Buttons"
                                   FontFamily="OpenSansSemiBold"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                            <RadioButton Content="Option 1" 
                                         TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                            <RadioButton Content="Option 2" IsChecked="True" 
                                         TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                            <RadioButton Content="Option 3" 
                                         TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
