<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NexusChat.Views.Controls.Theme.LayoutComponents">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="10">
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                   Padding="20" 
                   CornerRadius="10"
                   BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Layout Components"
                           Style="{StaticResource SubheaderLabelStyle}"
                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />

                    <!-- Grids -->
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                           Padding="15"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Grid Layout"
                                   FontFamily="OpenSansSemiBold"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*" Padding="5" RowSpacing="10" ColumnSpacing="10">
                                <Frame Grid.Row="0" Grid.Column="0" 
                                       BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                       Padding="10" CornerRadius="5" BorderColor="Transparent">
                                    <Label Text="Cell 1" 
                                           TextColor="White" 
                                           HorizontalOptions="Center" />
                                </Frame>
                                <Frame Grid.Row="0" Grid.Column="1" 
                                       BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource SecondaryDark}}"
                                       Padding="10" CornerRadius="5" BorderColor="Transparent">
                                    <Label Text="Cell 2" 
                                           TextColor="{AppThemeBinding Light=Black, Dark=White}" 
                                           HorizontalOptions="Center" />
                                </Frame>
                                <Frame Grid.Row="1" Grid.Column="0" 
                                       BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource SecondaryDark}}"
                                       Padding="10" CornerRadius="5" BorderColor="Transparent">
                                    <Label Text="Cell 3" 
                                           TextColor="{AppThemeBinding Light=Black, Dark=White}" 
                                           HorizontalOptions="Center" />
                                </Frame>
                                <Frame Grid.Row="1" Grid.Column="1" 
                                       BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                       Padding="10" CornerRadius="5" BorderColor="Transparent">
                                    <Label Text="Cell 4" 
                                           TextColor="White" 
                                           HorizontalOptions="Center" />
                                </Frame>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Flex Layout -->
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                           Padding="15"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Flex Layout"
                                   FontFamily="OpenSansSemiBold"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                            <FlexLayout Wrap="Wrap" JustifyContent="SpaceAround" AlignItems="Center">
                                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                       Padding="15" Margin="5" WidthRequest="100" HeightRequest="40"
                                       BorderColor="Transparent">
                                    <Label Text="Item 1" TextColor="White" 
                                           HorizontalOptions="Center" VerticalOptions="Center" />
                                </Frame>
                                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                       Padding="15" Margin="5" WidthRequest="100" HeightRequest="40"
                                       BorderColor="Transparent">
                                    <Label Text="Item 2" TextColor="White" 
                                           HorizontalOptions="Center" VerticalOptions="Center" />
                                </Frame>
                                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                       Padding="15" Margin="5" WidthRequest="100" HeightRequest="40"
                                       BorderColor="Transparent">
                                    <Label Text="Item 3" TextColor="White" 
                                           HorizontalOptions="Center" VerticalOptions="Center" />
                                </Frame>
                            </FlexLayout>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
