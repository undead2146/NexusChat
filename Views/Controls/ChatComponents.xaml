<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:NexusChat.Views.Controls"
             x:Class="NexusChat.Views.Controls.ChatComponents">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="10">
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                   Padding="20" 
                   CornerRadius="10"
                   BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Chat Components"
                           Style="{StaticResource SubheaderLabelStyle}"
                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />

                    <!-- Message Bubbles -->
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                           Padding="15"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Message Bubbles"
                                   FontFamily="OpenSansSemiBold"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                                   
                            <!-- User Message -->
                            <Frame BackgroundColor="{AppThemeBinding Light=#e3f2fd, Dark=#0d47a1}"
                                   Padding="10"
                                   BorderColor="Transparent"
                                   CornerRadius="10"
                                   HorizontalOptions="End"
                                   MaximumWidthRequest="280">
                                <VerticalStackLayout>
                                    <Label Text="This is a user message"
                                           TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                    <Label Text="12:30 PM"
                                           FontSize="10"
                                           TextColor="{AppThemeBinding Light=#757575, Dark=#aaaaaa}"
                                           HorizontalOptions="End" />
                                </VerticalStackLayout>
                            </Frame>
                            
                            <!-- AI Message -->
                            <Frame BackgroundColor="{AppThemeBinding Light=#f0f0f0, Dark=#303030}"
                                   Padding="10"
                                   BorderColor="Transparent"
                                   CornerRadius="10"
                                   HorizontalOptions="Start"
                                   MaximumWidthRequest="280">
                                <VerticalStackLayout>
                                    <Label Text="This is an AI response"
                                           TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                    <Label Text="12:31 PM"
                                           FontSize="10"
                                           TextColor="{AppThemeBinding Light=#757575, Dark=#aaaaaa}"
                                           HorizontalOptions="End" />
                                </VerticalStackLayout>
                            </Frame>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Chat Input Field -->
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                           Padding="15"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Message Input"
                                   FontFamily="OpenSansSemiBold" 
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                            <Grid ColumnDefinitions="*, Auto">
                                <Entry Grid.Column="0"
                                       Placeholder="Type a message..."
                                       PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                       TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                                <Button Grid.Column="1"
                                        Text="&#xf1d8;"
                                        FontFamily="FontAwesome-Solid"
                                        FontSize="18"
                                        WidthRequest="44"
                                        HeightRequest="44"
                                        CornerRadius="22"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                        TextColor="White"
                                        Padding="0"
                                        FontAutoScalingEnabled="False" />
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
