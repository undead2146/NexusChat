<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NexusChat.Views.Controls.Icons">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="10">
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                   Padding="20" 
                   CornerRadius="10"
                   BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Icons"
                           Style="{StaticResource SubheaderLabelStyle}"
                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                    
                    <!-- Icon Groups -->
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                           Padding="15"
                           BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Common Icons"
                                   FontFamily="OpenSansSemiBold"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                            
                            <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="20">
                                <!-- Row 1 -->
                                <VerticalStackLayout Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
                                    <Label Text="&#xf015;" 
                                           FontFamily="FontAwesome-Solid"
                                           FontSize="24"
                                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                           FontAutoScalingEnabled="False"
                                           HorizontalOptions="Center" />
                                    <Label Text="Home"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                           HorizontalOptions="Center"
                                           FontSize="12" />
                                </VerticalStackLayout>
                                
                                <VerticalStackLayout Grid.Row="0" Grid.Column="1" HorizontalOptions="Center">
                                    <Label Text="&#xf0e0;" 
                                           FontFamily="FontAwesome-Solid"
                                           FontSize="24"
                                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                           FontAutoScalingEnabled="False"
                                           HorizontalOptions="Center" />
                                    <Label Text="Mail"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                           HorizontalOptions="Center"
                                           FontSize="12" />
                                </VerticalStackLayout>
                                
                                <VerticalStackLayout Grid.Row="0" Grid.Column="2" HorizontalOptions="Center">
                                    <Label Text="&#xf007;" 
                                           FontFamily="FontAwesome-Solid"
                                           FontSize="24"
                                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                           FontAutoScalingEnabled="False"
                                           HorizontalOptions="Center" />
                                    <Label Text="User"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                           HorizontalOptions="Center"
                                           FontSize="12" />
                                </VerticalStackLayout>

                                <!-- Row 2 -->
                                <VerticalStackLayout Grid.Row="1" Grid.Column="0" HorizontalOptions="Center">
                                    <Label Text="&#xf013;" 
                                           FontFamily="FontAwesome-Solid"
                                           FontSize="24"
                                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                           FontAutoScalingEnabled="False"
                                           HorizontalOptions="Center" />
                                    <Label Text="Settings"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                           HorizontalOptions="Center"
                                           FontSize="12" />
                                </VerticalStackLayout>

                                <VerticalStackLayout Grid.Row="1" Grid.Column="1" HorizontalOptions="Center">
                                    <Label Text="&#xf004;" 
                                           FontFamily="FontAwesome-Solid"
                                           FontSize="24"
                                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                           FontAutoScalingEnabled="False"
                                           HorizontalOptions="Center" />
                                    <Label Text="Heart"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                           HorizontalOptions="Center"
                                           FontSize="12" />
                                </VerticalStackLayout>

                                <VerticalStackLayout Grid.Row="1" Grid.Column="2" HorizontalOptions="Center">
                                    <Label Text="&#xf002;" 
                                           FontFamily="FontAwesome-Solid"
                                           FontSize="24"
                                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                           FontAutoScalingEnabled="False"
                                           HorizontalOptions="Center" />
                                    <Label Text="Search"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                           HorizontalOptions="Center"
                                           FontSize="12" />
                                </VerticalStackLayout>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>
                    
                    <!-- Copy Status -->
                    <Label Text="{Binding IconStatusMessage}"
                           TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}"
                           HorizontalOptions="Center"
                           FontSize="12" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
