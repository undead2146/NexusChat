<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NexusChat.Views.Controls.Buttons">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="10">
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                   Padding="20"
                   CornerRadius="10"
                   BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                <VerticalStackLayout Spacing="20">
                    <Label Text="Button Styles"
                           Style="{StaticResource SubheaderLabelStyle}"
                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />

                    <!-- Primary Buttons -->
                    <Frame Style="{StaticResource DevToolsContentFrame}">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Primary Buttons"
                                   FontFamily="OpenSansSemiBold"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                            <Button Text="Primary Button"
                                    Style="{StaticResource PrimaryButtonStyle}" />
                            <Button Text="Primary Button Disabled"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    IsEnabled="False" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Secondary Buttons -->
                    <Frame Style="{StaticResource DevToolsContentFrame}">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Secondary Buttons"
                                   FontFamily="OpenSansSemiBold"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                            <Button Text="Secondary Button"
                                    Style="{StaticResource OutlineButton}" />
                            <Button Text="Secondary Button Disabled"
                                    Style="{StaticResource OutlineButton}"
                                    IsEnabled="False" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
