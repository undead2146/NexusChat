<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NexusChat.Views.Controls.ThinkingIndicator">
    <HorizontalStackLayout Spacing="6" HorizontalOptions="Start" VerticalOptions="Center">
        <Label Text="Thinking" 
               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"
               FontSize="14"
               VerticalOptions="Center" />
        <HorizontalStackLayout x:Name="DotsContainer" Spacing="4" VerticalOptions="Center">
            <Ellipse x:Name="Dot1" WidthRequest="6" HeightRequest="6" Fill="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryLight}}" />
            <Ellipse x:Name="Dot2" WidthRequest="6" HeightRequest="6" Fill="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryLight}}" />
            <Ellipse x:Name="Dot3" WidthRequest="6" HeightRequest="6" Fill="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryLight}}" />
        </HorizontalStackLayout>
    </HorizontalStackLayout>
</ContentView>
