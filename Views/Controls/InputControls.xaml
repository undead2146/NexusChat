<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NexusChat.Views.Controls.InputControls">
    
    <VerticalStackLayout Spacing="15">
        <Label Text="INPUT CONTROLS" Style="{StaticResource HeaderLabelStyle}" Margin="0,20,0,0" />
        
        <Frame>
            <VerticalStackLayout Spacing="15">
                <Label Text="Input Controls" Style="{StaticResource SubHeaderLabelStyle}" />
                
                <!-- Basic Inputs -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Text Inputs" FontSize="16" FontFamily="OpenSansSemiBold" />
                    
                    <Entry Placeholder="Standard Entry" />
                    <Entry Placeholder="Password Entry" IsPassword="True" />
                    <Entry Placeholder="Disabled Entry" IsEnabled="False" />
                    <Editor Placeholder="Multiline Editor" HeightRequest="100" />
                </VerticalStackLayout>
                
                <!-- Search Input -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Search Input" FontSize="16" FontFamily="OpenSansSemiBold" />
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <Entry Placeholder="Search..." />
                        <Button Grid.Column="1" Text="&#xf002;" Style="{StaticResource IconButton}" />
                    </Grid>
                </VerticalStackLayout>
                
                <!-- Selection Controls -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Selection Controls" FontSize="16" FontFamily="OpenSansSemiBold" />
                    
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="15">
                        <CheckBox Grid.Row="0" Grid.Column="0" IsChecked="True" Color="{StaticResource Primary}" />
                        <Label Grid.Row="0" Grid.Column="1" Text="Remember my preferences" VerticalOptions="Center" />
                        
                        <CheckBox Grid.Row="1" Grid.Column="0" IsChecked="False" Color="{StaticResource Primary}" />
                        <Label Grid.Row="1" Grid.Column="1" Text="Subscribe to newsletter" VerticalOptions="Center" />
                        
                        <Switch Grid.Row="2" Grid.Column="0" IsToggled="True" />
                        <Label Grid.Row="2" Grid.Column="1" Text="Enable notifications" VerticalOptions="Center" />
                    </Grid>
                </VerticalStackLayout>
                
                <!-- Dropdown/Picker -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Selection Pickers" FontSize="16" FontFamily="OpenSansSemiBold" />
                    
                    <Border Stroke="{StaticResource InputBorder}" StrokeThickness="1" Padding="10">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                            <Label Text="&#xf233;" Style="{StaticResource FontAwesome}" FontSize="20" />
                            <Label Grid.Column="1" Text="{Binding SelectedModel}" VerticalOptions="Center" />
                            <Label Grid.Column="2" Text="&#xf0d7;" Style="{StaticResource FontAwesome}" VerticalOptions="Center" />
                            
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ShowModelPickerCommand}" />
                            </Grid.GestureRecognizers>
                        </Grid>
                    </Border>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentView>
