<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NexusChat.Views.Controls.FunctionalColors">
    
    <VerticalStackLayout Spacing="15">
        <Label Text="FUNCTIONAL COLORS" Style="{StaticResource HeaderLabelStyle}" Margin="0,10,0,0" />
        
        <Frame>
            <VerticalStackLayout Spacing="15">
                <Label Text="Functional Colors" Style="{StaticResource SubHeaderLabelStyle}" />
                
                <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="Auto,60" ColumnSpacing="5" RowSpacing="10">
                    <Label Text="Success" Grid.Column="0" HorizontalOptions="Center" />
                    <Label Text="Info" Grid.Column="1" HorizontalOptions="Center" />
                    <Label Text="Warning" Grid.Column="2" HorizontalOptions="Center" />
                    <Label Text="Error" Grid.Column="3" HorizontalOptions="Center" />
                    
                    <Border Grid.Row="1" Grid.Column="0" BackgroundColor="{AppThemeBinding Light={StaticResource Success}, Dark={StaticResource Success}}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" CommandParameter="Success" />
                        </Border.GestureRecognizers>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" BackgroundColor="{AppThemeBinding Light={StaticResource Info}, Dark={StaticResource Info}}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" CommandParameter="Info" />
                        </Border.GestureRecognizers>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="2" BackgroundColor="{AppThemeBinding Light={StaticResource Warning}, Dark={StaticResource Warning}}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" CommandParameter="Warning" />
                        </Border.GestureRecognizers>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="3" BackgroundColor="{AppThemeBinding Light={StaticResource Error}, Dark={StaticResource Error}}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CopyColorToClipboardCommand}" CommandParameter="Error" />
                        </Border.GestureRecognizers>
                    </Border>
                </Grid>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentView>
