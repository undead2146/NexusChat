<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:NexusChat.Core.ViewModels.DevTools"
             xmlns:models="clr-namespace:NexusChat.Core.Models"
             xmlns:local="clr-namespace:NexusChat.Views.Pages.DevTools"
             xmlns:converters="clr-namespace:NexusChat.Views.Converters"
             x:Class="NexusChat.Views.Pages.DevTools.ModelTestingPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
             Shell.NavBarIsVisible="False"
             Title="Model Testing">

    <ContentPage.Resources>
        <local:EntityDataTemplateSelector x:Key="EntityTemplateSelector" />
        
        <!-- User Data Template -->
        <DataTemplate x:Key="UserTemplate">
            <Frame Padding="10" Margin="0,2" CornerRadius="8" BorderColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}">
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="4">
                    <Label Grid.Column="0" Grid.Row="0" Text="ðŸ‘¤" FontSize="24" VerticalOptions="Center" />
                    <VerticalStackLayout Grid.Column="1" Grid.Row="0">
                        <Label Text="{Binding DisplayName}" FontAttributes="Bold" FontSize="16" TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                        <Label Text="{Binding Username, StringFormat='@{0}'}" FontSize="14" TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                    </VerticalStackLayout>
                    
                    <Label Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" 
                           Text="{Binding Email, StringFormat='Email: {0}'}" 
                           FontSize="14" TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                    
                    <HorizontalStackLayout Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Spacing="10">
                        <Label Text="{Binding DateCreated, StringFormat='Created: {0:d}'}" 
                               FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TertiaryTextColor}, Dark={StaticResource TertiaryTextColorDark}}" />
                        <Label Text="|" FontSize="12" />
                        <Label Text="{Binding PreferredTheme, StringFormat='Theme: {0}'}" 
                               FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TertiaryTextColor}, Dark={StaticResource TertiaryTextColorDark}}" />
                    </HorizontalStackLayout>
                </Grid>
            </Frame>
        </DataTemplate>
        
        <!-- Conversation Data Template -->
        <DataTemplate x:Key="ConversationTemplate">
            <Frame Padding="10" Margin="0,2" CornerRadius="8" BorderColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}">
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="4">
                    <Label Grid.Column="0" Grid.Row="0" Text="ðŸ’¬" FontSize="24" VerticalOptions="Center" />
                    <VerticalStackLayout Grid.Column="1" Grid.Row="0">
                        <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="16" TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                        <Label Text="{Binding Category, StringFormat='Category: {0}'}" 
                               FontSize="14" TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                    </VerticalStackLayout>
                    
                    <Label Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" 
                           Text="{Binding Summary}" LineBreakMode="TailTruncation" MaxLines="2"
                           FontSize="14" TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                    
                    <HorizontalStackLayout Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Spacing="10">
                        <Label Text="{Binding CreatedAt, StringFormat='Created: {0:g}'}" 
                               FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TertiaryTextColor}, Dark={StaticResource TertiaryTextColorDark}}" />
                        <Label Text="|" FontSize="12" />
                        <Label Text="{Binding TotalTokensUsed, StringFormat='Tokens: {0}'}" 
                               FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TertiaryTextColor}, Dark={StaticResource TertiaryTextColorDark}}" />
                        <Label Text="|" FontSize="12" />
                        <Label Text="{Binding IsFavorite, StringFormat='favorite: {0}'}" 
                               FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TertiaryTextColor}, Dark={StaticResource TertiaryTextColorDark}}" />
                    </HorizontalStackLayout>
                </Grid>
            </Frame>
        </DataTemplate>
        
        <!-- Message Data Template -->
        <DataTemplate x:Key="MessageTemplate">
            <Frame Padding="10" Margin="0,2" CornerRadius="8" BorderColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}">
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="4">
                    <Label Grid.Column="0" Grid.Row="0" Text="{Binding IsAI, StringFormat='{0}', Converter={StaticResource MessageIconConverter}}" 
                           FontSize="24" VerticalOptions="Center" />
                    <VerticalStackLayout Grid.Column="1" Grid.Row="0">
                        <Label Text="{Binding IsAI, StringFormat='{0}', Converter={StaticResource MessageAuthorConverter}}" 
                               FontAttributes="Bold" FontSize="16" TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                        <Label Text="{Binding Timestamp, StringFormat='{0:g}'}" 
                               FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TertiaryTextColor}, Dark={StaticResource TertiaryTextColorDark}}" />
                    </VerticalStackLayout>
                    
                    <Label Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" 
                           Text="{Binding Content}" LineBreakMode="TailTruncation" MaxLines="3"
                           FontSize="14" TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                </Grid>
            </Frame>
        </DataTemplate>
        
        <!-- Model Data Template -->
        <DataTemplate x:Key="ModelTemplate">
            <Frame Padding="10" Margin="0,2" CornerRadius="8" BorderColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}">
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="4">
                    <Label Grid.Column="0" Grid.Row="0" Text="ðŸ¤–" FontSize="24" VerticalOptions="Center" />
                    <VerticalStackLayout Grid.Column="1" Grid.Row="0">
                        <Label Text="{Binding ModelName}" FontAttributes="Bold" FontSize="16" TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                        <Label Text="{Binding ProviderName, StringFormat='Provider: {0}'}" 
                               FontSize="14" TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                    </VerticalStackLayout>
                    
                    <Label Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" 
                           Text="{Binding Description}" LineBreakMode="TailTruncation" MaxLines="2"
                           FontSize="14" TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                    
                    <HorizontalStackLayout Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Spacing="10">
                        <Label Text="{Binding MaxTokens, StringFormat='Max Tokens: {0}'}" 
                               FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TertiaryTextColor}, Dark={StaticResource TertiaryTextColorDark}}" />
                        <Label Text="|" FontSize="12" />
                        <Label Text="{Binding DefaultTemperature, StringFormat='Temperature: {0:F2}'}" 
                               FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TertiaryTextColor}, Dark={StaticResource TertiaryTextColorDark}}" />
                        <Label Text="|" FontSize="12" />
                        <Label Text="{Binding IsAvailable, StringFormat='Available: {0}'}" 
                               FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TertiaryTextColor}, Dark={StaticResource TertiaryTextColorDark}}" />
                    </HorizontalStackLayout>
                </Grid>
            </Frame>
        </DataTemplate>
        
        <!-- Default Template -->
        <DataTemplate x:Key="DefaultTemplate">
            <Frame Padding="8" Margin="0,2" CornerRadius="8" BorderColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}">
                <Label Text="{Binding .}" TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
            </Frame>
        </DataTemplate>
    </ContentPage.Resources>

    <!-- Custom Header -->
    <Grid RowDefinitions="Auto,*" RowSpacing="0">
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto,Auto"
              BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
              Padding="15,12">
            <!-- Back Button  -->
            <Button Grid.Column="0"
                    Text="&#xf060;"
                    FontFamily="FontAwesome-Solid"
                    FontSize="22"
                    Command="{Binding GoBackCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    BorderColor="Transparent"
                    WidthRequest="50"
                    HeightRequest="50"
                    Padding="0"
                    CornerRadius="25"
                    HorizontalOptions="Start"
                    VerticalOptions="Center" />

            <!-- Title -->
            <Label Grid.Column="1"
                   Text="Model Testing"
                   FontFamily="OpenSansBold"
                   TextColor="White"
                   FontSize="20"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />
                   
            <!-- Cancel Button -->
            <Button Grid.Column="2"
                    Text="Cancel"
                    Command="{Binding CancelGenerationCommand}"
                    IsVisible="{Binding IsBusy}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    BorderColor="White"
                    BorderWidth="1"
                    Padding="8,2"
                    Margin="0,0,10,0"
                    CornerRadius="5"
                    HorizontalOptions="End"
                    VerticalOptions="Center" />
                   
            <!-- Loading Indicator -->
            <ActivityIndicator Grid.Column="3"
                              IsRunning="{Binding IsBusy}"
                              IsVisible="{Binding IsBusy}"
                              Color="White"
                              HorizontalOptions="End"
                              WidthRequest="40"
                              HeightRequest="40" />
        </Grid>

        <!-- Main Content: Simple layout with single column for better organization -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="15">
                <!-- Database Statistics Card -->
                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                       Padding="15" Margin="0,0,0,15"
                       BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                    <Grid RowDefinitions="Auto,Auto" RowSpacing="15">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="15">
                            <Label Text="Database Statistics"
                                   FontFamily="OpenSansSemiBold"
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                   FontSize="16" />
                               
                            <!-- Refresh button -->
                            <Button Grid.Column="1"
                                    Text="Refresh"
                                    Command="{Binding RefreshCommand}"
                                    IsEnabled="{Binding IsNotBusy}"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource SecondaryDark}}"
                                    TextColor="{AppThemeBinding Light={StaticResource OnSecondary}, Dark={StaticResource OnSecondaryDark}}"
                                    Padding="10,5"
                                    FontSize="12"
                                    CornerRadius="8" />
                        </Grid>
                        
                        <Grid Grid.Row="1" ColumnDefinitions="*,*,*" ColumnSpacing="15">
                            <!-- Users -->
                            <Frame Grid.Column="0"
                                   BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                                   CornerRadius="8"
                                   Padding="10">
                                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="{Binding DbUserCount}"
                                           FontSize="24"
                                           FontFamily="OpenSansBold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                    <Label Text="Users"
                                           FontSize="12"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                                </VerticalStackLayout>
                            </Frame>
                            
                            <!-- Conversations -->
                            <Frame Grid.Column="1"
                                   BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                                   CornerRadius="8"
                                   Padding="10">
                                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="{Binding DbConversationCount}"
                                           FontSize="24"
                                           FontFamily="OpenSansBold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                    <Label Text="Conversations"
                                           FontSize="12"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                                </VerticalStackLayout>
                            </Frame>
                            
                            <!-- Messages -->
                            <Frame Grid.Column="2"
                                   BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                                   CornerRadius="8"
                                   Padding="10">
                                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="{Binding DbMessageCount}"
                                           FontSize="24"
                                           FontFamily="OpenSansBold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                    <Label Text="Messages"
                                           FontSize="12"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </Grid>
                </Frame>

                <!-- Data Generation Card -->
                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                       Padding="15" Margin="0,0,0,15"
                       BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Generate Test Data"
                               FontFamily="OpenSansSemiBold"
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                               FontSize="16" />
                        
                        <!-- Users  -->
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                            <Label Grid.Column="0" 
                                   Text="ðŸ‘¤"
                                   FontSize="24"
                                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                   VerticalOptions="Center" />
                                   
                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Label Text="Users" 
                                       FontFamily="OpenSansSemiBold"
                                       TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="Count:" 
                                           VerticalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                                    <Entry Text="{Binding GenerateUserCount}" 
                                           Keyboard="Numeric"
                                           WidthRequest="60"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                           BackgroundColor="Transparent" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="2"
                                    Text="Generate Users"
                                    Command="{Binding GenerateUsersCommand}"
                                    IsEnabled="{Binding IsNotBusy}"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                    TextColor="White"
                                    Padding="12,8"
                                    FontSize="14"
                                    CornerRadius="8" />
                        </Grid>
                        
                        <BoxView HeightRequest="1" 
                                 BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                                 HorizontalOptions="Fill" />
                        
                        <!-- Conversations-->
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                            <Label Grid.Column="0" 
                                   Text="ðŸ’¬"
                                   FontSize="24"
                                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                   VerticalOptions="Center" />
                                   
                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Label Text="Conversations" 
                                       FontFamily="OpenSansSemiBold"
                                       TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="Count:" 
                                           VerticalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                                    <Entry Text="{Binding GenerateConversationCount}" 
                                           Keyboard="Numeric"
                                           WidthRequest="60"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                           BackgroundColor="Transparent" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="2"
                                    Text="Generate Conversations"
                                    Command="{Binding GenerateConversationsCommand}"
                                    IsEnabled="{Binding IsNotBusy}"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                    TextColor="White"
                                    Padding="12,8"
                                    FontSize="14"
                                    CornerRadius="8" />
                        </Grid>
                        
                        <BoxView HeightRequest="1" 
                                 BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                                 HorizontalOptions="Fill" />
                        
                        <!-- Messages -->
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                            <Label Grid.Column="0" 
                                   Text="âœ‰ï¸"
                                   FontSize="24"
                                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                   VerticalOptions="Center" />
                                   
                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Label Text="Messages" 
                                       FontFamily="OpenSansSemiBold"
                                       TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="Count:" 
                                           VerticalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                                    <Entry Text="{Binding GenerateMessageCount}" 
                                           Keyboard="Numeric"
                                           WidthRequest="60"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                           BackgroundColor="Transparent" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="2"
                                    Text="Generate Messages"
                                    Command="{Binding GenerateMessagesCommand}"
                                    IsEnabled="{Binding IsNotBusy}"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                    TextColor="White"
                                    Padding="12,8"
                                    FontSize="14"
                                    CornerRadius="8" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Results Section -->
                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                       Padding="15" Margin="0,0,0,15"
                       BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                    <Grid RowDefinitions="Auto,*" RowSpacing="10">
                        <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                            <Label Text="Generated Items" 
                                   FontFamily="OpenSansSemiBold" 
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                   FontSize="16" />
                                   
                            <Button Grid.Column="1" 
                                    Text="Clear"
                                    Command="{Binding ClearLogCommand}" 
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource SecondaryDark}}"
                                    TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                    CornerRadius="8"
                                    Padding="10,5"
                                    FontSize="12"
                                    Margin="0,0,0,5" />
                        </Grid>

                        <!-- Enhanced CollectionView with template selector-->
                        <Frame Grid.Row="1"
                               BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}" 
                               BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                               Padding="10"
                               MinimumHeightRequest="200"
                               CornerRadius="5"
                               HasShadow="False">
                            <StackLayout>
                                <!-- Placeholder for empty list -->
                                <Label Text="No items have been generated yet" 
                                       IsVisible="{Binding GeneratedEntities.Count, Converter={converters:IntToBoolConverter}, ConverterParameter=0}" 
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}"/>
                                
                                <!-- CollectionView with proper template selector -->
                                <CollectionView ItemsSource="{Binding GeneratedEntities}"
                                                BackgroundColor="Transparent"
                                                SelectionMode="None"
                                                VerticalOptions="FillAndExpand">
                                    <CollectionView.ItemTemplate>
                                        <local:EntityDataTemplateSelector
                                            UserTemplate="{StaticResource UserTemplate}"
                                            ConversationTemplate="{StaticResource ConversationTemplate}"
                                            MessageTemplate="{StaticResource MessageTemplate}"
                                            ModelTemplate="{StaticResource ModelTemplate}"
                                            DefaultTemplate="{StaticResource DefaultTemplate}" />
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout>
                        </Frame>
                    </Grid>
                </Frame>
                
                <!-- Log Output -->
                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                       Padding="15" Margin="0,0,0,15"
                       BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Log Output" 
                               FontFamily="OpenSansSemiBold" 
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                               FontSize="16" />
                               
                        <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}" 
                               BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                               Padding="10"
                               MinimumHeightRequest="150">
                            <ScrollView>
                                <Label Text="{Binding LogOutput}" 
                                       FontFamily="Monospace" 
                                       TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}"
                                       FontSize="12" 
                                       LineBreakMode="WordWrap" />
                            </ScrollView>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
