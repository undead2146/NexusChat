<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:NexusChat.Core.ViewModels.DevTools"
             x:Class="NexusChat.Views.Pages.DevTools.ModelTestingPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
             Shell.NavBarIsVisible="False"
             Title="Model Testing">

    <!-- Custom Header -->
    <Grid RowDefinitions="Auto,*" RowSpacing="0">
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto"
              BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
              Padding="15,12">
            <!-- Back Button - Fix Icon Font -->
            <Button Grid.Column="0"
                    Text="&#xf060;"
                    FontFamily="FontAwesome-Solid"
                    FontSize="22"
                    Command="{Binding GoBackCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    BorderColor="Transparent"
                    WidthRequest="50"
                    HeightRequest="50"
                    Padding="0"
                    CornerRadius="25"
                    HorizontalOptions="Start"
                    VerticalOptions="Center" />

            <!-- Title -->
            <Label Grid.Column="1"
                   Text="Model Testing"
                   FontFamily="OpenSansBold"
                   TextColor="White"
                   FontSize="20"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />
                   
            <!-- Loading Indicator -->
            <ActivityIndicator Grid.Column="2"
                              IsRunning="{Binding IsBusy}"
                              IsVisible="{Binding IsBusy}"
                              Color="White"
                              HorizontalOptions="End"
                              WidthRequest="40"
                              HeightRequest="40" />
        </Grid>

        <!-- Main Content: Simple layout with single column for better organization -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="15">
                <!-- Database Statistics Card -->
                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                       Padding="15" Margin="0,0,0,15"
                       BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Database Statistics"
                               FontFamily="OpenSansSemiBold"
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                               FontSize="16" />
                               
                        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15">
                            <!-- Users -->
                            <Frame Grid.Column="0"
                                   BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                                   CornerRadius="8"
                                   Padding="10">
                                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="{Binding DbUserCount}"
                                           FontSize="24"
                                           FontFamily="OpenSansBold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                    <Label Text="Users"
                                           FontSize="12"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                                </VerticalStackLayout>
                            </Frame>
                            
                            <!-- Conversations -->
                            <Frame Grid.Column="1"
                                   BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                                   CornerRadius="8"
                                   Padding="10">
                                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="{Binding DbConversationCount}"
                                           FontSize="24"
                                           FontFamily="OpenSansBold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                    <Label Text="Conversations"
                                           FontSize="12"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                                </VerticalStackLayout>
                            </Frame>
                            
                            <!-- Messages -->
                            <Frame Grid.Column="2"
                                   BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}"
                                   CornerRadius="8"
                                   Padding="10">
                                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="{Binding DbMessageCount}"
                                           FontSize="24"
                                           FontFamily="OpenSansBold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                    <Label Text="Messages"
                                           FontSize="12"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Data Generation Card -->
                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                       Padding="15" Margin="0,0,0,15"
                       BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Generate Test Data"
                               FontFamily="OpenSansSemiBold"
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                               FontSize="16" />
                        
                        <!-- Users - Fix icon -->
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                            <Label Grid.Column="0" 
                                   Text="ðŸ‘¤"
                                   FontSize="24"
                                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                   VerticalOptions="Center" />
                                   
                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Label Text="Users" 
                                       FontFamily="OpenSansSemiBold"
                                       TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="Count:" 
                                           VerticalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                                    <Entry Text="{Binding GenerateUserCount}" 
                                           Keyboard="Numeric"
                                           WidthRequest="60"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                           BackgroundColor="Transparent" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="2"
                                    Text="Generate Users"
                                    Command="{Binding GenerateUsersCommand}"
                                    IsEnabled="{Binding IsNotBusy}"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                    TextColor="White"
                                    Padding="12,8"
                                    FontSize="14"
                                    CornerRadius="8" />
                        </Grid>
                        
                        <BoxView HeightRequest="1" 
                                 BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                                 HorizontalOptions="Fill" />
                        
                        <!-- Conversations - Fix icon -->
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                            <Label Grid.Column="0" 
                                   Text="ðŸ’¬"
                                   FontSize="24"
                                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                   VerticalOptions="Center" />
                                   
                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Label Text="Conversations" 
                                       FontFamily="OpenSansSemiBold"
                                       TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="Count:" 
                                           VerticalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                                    <Entry Text="{Binding GenerateConversationCount}" 
                                           Keyboard="Numeric"
                                           WidthRequest="60"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                           BackgroundColor="Transparent" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="2"
                                    Text="Generate Conversations"
                                    Command="{Binding GenerateConversationsCommand}"
                                    IsEnabled="{Binding IsNotBusy}"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                    TextColor="White"
                                    Padding="12,8"
                                    FontSize="14"
                                    CornerRadius="8" />
                        </Grid>
                        
                        <BoxView HeightRequest="1" 
                                 BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                                 HorizontalOptions="Fill" />
                        
                        <!-- Messages - Fix icon -->
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                            <Label Grid.Column="0" 
                                   Text="âœ‰ï¸"
                                   FontSize="24"
                                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                   VerticalOptions="Center" />
                                   
                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Label Text="Messages" 
                                       FontFamily="OpenSansSemiBold"
                                       TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}" />
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="Count:" 
                                           VerticalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                                    <Entry Text="{Binding GenerateMessageCount}" 
                                           Keyboard="Numeric"
                                           WidthRequest="60"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                           BackgroundColor="Transparent" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="2"
                                    Text="Generate Messages"
                                    Command="{Binding GenerateMessagesCommand}"
                                    IsEnabled="{Binding IsNotBusy}"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                    TextColor="White"
                                    Padding="12,8"
                                    FontSize="14"
                                    CornerRadius="8" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Results Section -->
                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                       Padding="15" Margin="0,0,0,15"
                       BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                    <Grid RowDefinitions="Auto,*" RowSpacing="10">
                        <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                            <Label Text="Generated Items" 
                                   FontFamily="OpenSansSemiBold" 
                                   TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                   FontSize="16" />
                                   
                            <Button Grid.Column="1" 
                                    Text="Clear"
                                    Command="{Binding ClearLogCommand}" 
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource SecondaryDark}}"
                                    TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                    CornerRadius="8"
                                    Padding="10,5"
                                    FontSize="12"
                                    Margin="0,0,0,5" />
                        </Grid>

                        <!-- Fix: Replace CollectionView with ListView for better visibility -->
                        <Frame Grid.Row="1"
                               BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}" 
                               BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                               Padding="10"
                               MinimumHeightRequest="120"
                               CornerRadius="5"
                               HasShadow="False">
                            <ListView ItemsSource="{Binding GenerationResults}"
                                      BackgroundColor="Transparent"
                                      SeparatorVisibility="None"
                                      HasUnevenRows="True"
                                      SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <Grid Padding="2">
                                                <Label Text="{Binding}" 
                                                       TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}"
                                                       FontSize="14" 
                                                       LineBreakMode="WordWrap" />
                                            </Grid>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                <ListView.Footer>
                                    <Grid HeightRequest="1" />
                                </ListView.Footer>
                            </ListView>
                        </Frame>
                    </Grid>
                </Frame>
                
                <!-- Log Output -->
                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                       Padding="15" Margin="0,0,0,15"
                       BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Log Output" 
                               FontFamily="OpenSansSemiBold" 
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                               FontSize="16" />
                               
                        <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}" 
                               BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                               Padding="10"
                               MinimumHeightRequest="150">
                            <ScrollView>
                                <Label Text="{Binding LogOutput}" 
                                       FontFamily="Monospace" 
                                       TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}"
                                       FontSize="12" 
                                       LineBreakMode="WordWrap" />
                            </ScrollView>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
