<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodels="clr-namespace:NexusChat.Core.ViewModels"
             xmlns:models="clr-namespace:NexusChat.Core.Models"
             x:Class="NexusChat.Views.Pages.MainPage"
             x:Name="MainPageRoot"
             x:DataType="viewmodels:MainPageViewModel"
             Title="NexusChat"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}">
    
    <Grid Padding="{OnPlatform iOS='0,47,0,34', Android='0,0,0,0', Default='0,0,0,0'}" RowDefinitions="*,Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20,24,20,16" Spacing="24">
                
                <!-- Header Section -->
                <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,8">
                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                        <Label Text="NexusChat" 
                               FontFamily="OpenSansBold" 
                               FontSize="32" 
                               TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                        <Label Text="Your AI Assistant Hub" 
                               FontFamily="OpenSansRegular" 
                               FontSize="16" 
                               TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}" />
                    </VerticalStackLayout>
                    
                    <!-- Theme Toggle -->
                    <Frame Grid.Column="1"
                           Padding="0"
                           WidthRequest="50" HeightRequest="50"
                           CornerRadius="25"
                           HasShadow="True"
                           BorderColor="Transparent"
                           BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}">
                        <Label Text="{Binding ThemeIconText}"
                               FontFamily="FontAwesome-Solid"
                               FontSize="24"
                               FontAutoScalingEnabled="False"
                               TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ToggleThemeCommand}"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                </Grid>
                
                <!-- Quick Start Section -->
                <Frame Padding="0"
                       HasShadow="True"
                       BorderColor="Transparent"
                       CornerRadius="20"
                       BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}">
                    <VerticalStackLayout Spacing="0">
                        <!-- Header -->
                        <Grid BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                              Padding="24,20">
                            <Label Text="Quick Start"
                                   TextColor="White"
                                   FontFamily="OpenSansBold"
                                   FontSize="20"
                                   VerticalOptions="Center"/>
                        </Grid>
                        
                        <!-- Content -->
                        <VerticalStackLayout Padding="24,20" Spacing="20">
                            <!-- New Chat Button -->
                            <Button Text="Start New Chat"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                    TextColor="White"
                                    FontFamily="OpenSansSemiBold"
                                    FontSize="16"
                                    CornerRadius="12"
                                    HeightRequest="50"
                                    Command="{Binding StartNewChatCommand}"/>
                            
                            <!-- Browse Models Button -->
                            <Button Text="Browse All AI Models"
                                    BorderWidth="2"
                                    BorderColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                    TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                    BackgroundColor="Transparent"
                                    FontFamily="OpenSansSemiBold"
                                    FontSize="16"
                                    CornerRadius="12"
                                    HeightRequest="50"
                                    Command="{Binding ModelsCommand}"/>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>
                
                <!-- Favorite Models Section -->
                <Frame Padding="0"
                       HasShadow="True"
                       BorderColor="Transparent"
                       CornerRadius="20"
                       BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                       IsVisible="{Binding HasFavoriteModels}">
                    <VerticalStackLayout Spacing="0">
                        <!-- Header -->
                        <Grid BackgroundColor="{AppThemeBinding Light=#FF6B35, Dark=#FF8C42}"
                              Padding="24,16">
                            <Label Text="Favorite Models"
                                   TextColor="White"
                                   FontFamily="OpenSansBold"
                                   FontSize="18"
                                   VerticalOptions="Center"/>
                        </Grid>
                        
                        <!-- Models Grid -->
                        <StackLayout Orientation="Vertical" Margin="20,16,20,20">
                            <CollectionView ItemsSource="{Binding FavoriteModels}"
                                            SelectionMode="None"
                                            BackgroundColor="Transparent">
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout Orientation="Vertical" 
                                                     Span="2" 
                                                     HorizontalItemSpacing="12" 
                                                     VerticalItemSpacing="12"/>
                                </CollectionView.ItemsLayout>
                                
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="viewmodels:FavoriteModelItem">
                                        <Grid>
                                            <Frame Padding="14"
                                                   CornerRadius="12"
                                                   Margin="0"
                                                   BackgroundColor="{Binding ColorHex}"
                                                   HasShadow="True"
                                                   BorderColor="Transparent"
                                                   HeightRequest="80">
                                                <Grid RowDefinitions="Auto,*" RowSpacing="6">
                                                    <Label Grid.Row="0"
                                                           Text="{Binding Name}"
                                                           FontFamily="OpenSansBold"
                                                           FontSize="14"
                                                           TextColor="White"
                                                           LineBreakMode="TailTruncation"
                                                           MaxLines="1"/>
                                                           
                                                    <Label Grid.Row="1"
                                                           Text="{Binding Provider}"
                                                           FontFamily="OpenSansRegular"
                                                           FontSize="12"
                                                           TextColor="#FFFFFFCC"
                                                           LineBreakMode="TailTruncation"
                                                           MaxLines="1"
                                                           VerticalOptions="Start"/>
                                                </Grid>
                                                <Frame.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainPageViewModel}}, Path=SelectModelCommand}"
                                                                          CommandParameter="{Binding .}"/>
                                                </Frame.GestureRecognizers>
                                            </Frame>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </VerticalStackLayout>
                </Frame>
                
                <!-- Recent Conversations Section -->
                <Frame Padding="0"
                       HasShadow="True"
                       BorderColor="Transparent"
                       CornerRadius="20"
                       BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                       IsVisible="{Binding HasRecentConversations}">
                    <VerticalStackLayout Spacing="0">
                        <!-- Header -->
                        <Grid BackgroundColor="{AppThemeBinding Light=#4CAF50, Dark=#66BB6A}"
                              Padding="24,16">
                            <Label Text="Recent Conversations"
                                   TextColor="White"
                                   FontFamily="OpenSansBold"
                                   FontSize="18"
                                   VerticalOptions="Center"/>
                        </Grid>
                        
                        <!-- Conversations List -->
                        <StackLayout Orientation="Vertical" Margin="20,16,20,20">
                            <CollectionView ItemsSource="{Binding RecentConversations}"
                                            SelectionMode="None"
                                            BackgroundColor="Transparent">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="viewmodels:RecentConversationItem">
                                        <Grid>
                                            <Frame Padding="16"
                                                   CornerRadius="12"
                                                   Margin="0,0,0,8"
                                                   BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray800}}"
                                                   HasShadow="False"
                                                   BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                                   HeightRequest="85">
                                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" RowSpacing="6">
                                                    <Label Grid.Column="0" Grid.Row="0"
                                                           Text="{Binding Title}"
                                                           FontFamily="OpenSansSemiBold"
                                                           FontSize="16"
                                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                                                           LineBreakMode="TailTruncation"
                                                           MaxLines="1"/>
                                                           
                                                    <Label Grid.Column="0" Grid.Row="1"
                                                           Text="{Binding UpdatedAt, StringFormat='{0:MMM dd, yyyy}'}"
                                                           FontFamily="OpenSansRegular"
                                                           FontSize="13"
                                                           TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}"
                                                           Margin="0,0,0,0"/>
                                                           
                                                    <Label Grid.Column="1" Grid.RowSpan="2"
                                                           Text="&#xf054;"
                                                           FontFamily="FontAwesome-Solid"
                                                           FontSize="14"
                                                           TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}"
                                                           VerticalOptions="Center"/>
                                                </Grid>
                                                <Frame.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainPageViewModel}}, Path=SelectConversationCommand}"
                                                                          CommandParameter="{Binding .}"/>
                                                </Frame.GestureRecognizers>
                                            </Frame>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </VerticalStackLayout>
                </Frame>
                
                <!-- Empty State for No Favorites/Conversations -->
                <Frame Padding="0"
                       HasShadow="True"
                       BorderColor="Transparent"
                       CornerRadius="20"
                       BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
                       IsVisible="{Binding ShowEmptyState}">
                    <VerticalStackLayout Padding="40,30" Spacing="16">
                        <Label Text="&#xf4ad;"
                               FontFamily="FontAwesome-Solid"
                               FontSize="48"
                               TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                               HorizontalOptions="Center"/>
                        <Label Text="Welcome to NexusChat!"
                               FontFamily="OpenSansBold"
                               FontSize="18"
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryTextColor}, Dark={StaticResource PrimaryTextColorDark}}"
                               HorizontalOptions="Center"/>
                        <Label Text="Start your first conversation or browse AI models to get started."
                               FontFamily="OpenSansRegular"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Frame>
                
                <!-- App Version -->
                <Label Text="NexusChat v0.5.0"
                       HorizontalOptions="Center"
                       FontSize="12"
                       Margin="0,16,0,0"
                       TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"/>
            </VerticalStackLayout>
        </ScrollView>
        
        <!-- Bottom Navigation -->
        <Grid Grid.Row="1" 
              ColumnDefinitions="*,*,*"
              BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}"
              HeightRequest="70"
              Padding="0,8,0,8">
            
            <!-- Home - Active -->
            <VerticalStackLayout Grid.Column="0"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="4">
                <Label Text="&#xf015;"
                       FontFamily="FontAwesome-Solid"
                       FontSize="24"
                       TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                       HorizontalOptions="Center"/>
                <Label Text="Home"
                       FontSize="12"
                       TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                       FontFamily="OpenSansSemiBold"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
            
            <!-- Chats -->
            <VerticalStackLayout Grid.Column="1" 
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="4">
                <Label Text="&#xf4ad;"
                       FontFamily="FontAwesome-Solid"
                       FontSize="24"
                       TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}"
                       HorizontalOptions="Center"/>
                <Label Text="Chats"
                       FontSize="12"
                       TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}"
                       FontFamily="OpenSansRegular"
                       HorizontalOptions="Center"/>
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ViewChatsCommand}"/>
                </VerticalStackLayout.GestureRecognizers>
            </VerticalStackLayout>
            
            <!-- Models -->
            <VerticalStackLayout Grid.Column="2" 
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="4">
                <Label Text="&#xf085;"
                       FontFamily="FontAwesome-Solid"
                       FontSize="24"
                       TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}"
                       HorizontalOptions="Center"/>
                <Label Text="Models"
                       FontSize="12"
                       TextColor="{AppThemeBinding Light={StaticResource SecondaryTextColor}, Dark={StaticResource SecondaryTextColorDark}}"
                       FontFamily="OpenSansRegular"
                       HorizontalOptions="Center"/>
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ModelsCommand}"/>
                </VerticalStackLayout.GestureRecognizers>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
